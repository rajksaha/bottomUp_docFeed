<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bottomUp.myBatis.persistence.ContentDoctorCategoryMapper">

	<insert id="create" parameterType="contentDoctorCategory" useGeneratedKeys="true" keyProperty="categoryID" >

		INSERT INTO `content_doctor_category`(
			`categortName`,
			`updatedBy`,
			`updatedOn`,
			`createdBy`,
			`createdOn`
		)
		VALUES(
			#{categortName},
			#{updatedBy},
			#{updatedOn},
			#{createdBy},
			#{createdOn}
		);


	</insert>
	
	<update id="update" parameterType="contentDoctorCategory">
		UPDATE `content_doctor_category`
		SET
		`categortName` = #{categortName},
		`updatedBy` = #{updatedBy},
		`updatedOn` = #{updatedOn}
		WHERE categoryID = #{categoryID}
	</update>

	<select id="getByID" parameterType="long" resultType="contentDoctorCategory">
		SELECT
		   `categoryID`,
			`categortName`,
			`updatedBy`,
			`updatedOn`,
			`createdBy`,
			`createdOn`
		FROM `content_doctor_category`

		WHERE categoryID = #{categoryID}
	</select>

	<select id="getByParam" parameterType="map" resultType="contentDoctorCategory">
		SELECT
		`categoryID`,
		`categortName`,
		`updatedBy`,
		`updatedOn`,
		`createdBy`,
		`createdOn`
		FROM `content_doctor_category`
		WHERE 1 = 1
		<if test="categoryID != null">
			AND categoryID = #{categoryID}
		</if>
		<if test="offset != null and limit != null and sortColumn != null and sortOrder != null">
			ORDER BY ${sortColumn} ${sortOrder}
			LIMIT #{limit} OFFSET #{offset}
		</if>
	</select>

    <delete id="delete" parameterType="map">
		DELETE  FROM content_doctor_category
		WHERE 1=1
		<if test="categoryID != null">
			AND categoryID = #{categoryID}
		</if>
	</delete>


</mapper>