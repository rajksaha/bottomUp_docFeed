<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bottomUp.myBatis.persistence.ContentDiseaseMapper">

	<insert id="create" parameterType="contentDisease" useGeneratedKeys="true" keyProperty="diseaseID" >

		INSERT INTO `content_disease`(
			`diseaseName`,
			`updatedBy`,
			`updatedOn`,
			`createdBy`,
			`createdOn`
		)
		VALUES(
			#{diseaseName},
			#{updatedBy},
			#{updatedOn},
			#{createdBy},
			#{createdOn}
		);


	</insert>
	
	<update id="update" parameterType="contentDisease">
		UPDATE `content_disease`
		SET
		`diseaseName` = #{diseaseName},
		`updatedBy` = #{updatedBy},
		`updatedOn` = #{updatedOn}
		WHERE diseaseID = #{diseaseID}
	</update>

	<select id="getByID" parameterType="long" resultType="contentDisease">
		SELECT
		     `diseaseID`,
			`diseaseName`,
			`updatedBy`,
			`updatedOn`,
			`createdBy`,
			`createdOn`
		FROM `content_disease`

		WHERE diseaseID = #{diseaseID}
	</select>

	<select id="getByParam" parameterType="map" resultType="contentDisease">
		SELECT
		`diseaseID`,
		`diseaseName`,
		`updatedBy`,
		`updatedOn`,
		`createdBy`,
		`createdOn`
		FROM `content_disease`

		WHERE 1 = 1
		<if test="diseaseID != null">
			AND diseaseID = #{diseaseID}
		</if>
		<if test="offset != null and limit != null and sortColumn != null and sortOrder != null">
			ORDER BY ${sortColumn} ${sortOrder}
			LIMIT #{limit} OFFSET #{offset}
		</if>
	</select>

    <delete id="delete" parameterType="map">
		DELETE  FROM content_disease
		WHERE 1=1
		<if test="diseaseID != null">
			AND diseaseID = #{diseaseID}
		</if>
	</delete>


</mapper>