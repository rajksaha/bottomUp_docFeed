<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bottomUp.myBatis.persistence.ContentVitalOptionMapper">

	<insert id="create" parameterType="contentVitalOption" useGeneratedKeys="true" keyProperty="vitalOptionID" >

		INSERT INTO `content_vital_option`(
			`vitalID`,
			`optionName`,
			`updatedBy`,
			`updatedOn`,
			`createdBy`,
			`createdOn`
		)
		VALUES(
			#{vitalID},
			#{optionName},
			#{updatedBy},
			#{updatedOn},
			#{createdBy},
			#{createdOn}
		);


	</insert>
	
	<update id="update" parameterType="contentVitalOption">
		UPDATE `content_vital_option`
		SET
		`vitalID` = #{vitalID},
		`optionName` = #{optionName},
		`updatedBy` = #{updatedBy},
		`updatedOn` = #{updatedOn}
		WHERE vitalOptionID = #{vitalOptionID}
	</update>

	<select id="getByID" parameterType="long" resultType="contentVitalOption">
		SELECT
			`vitalOptionID`,
			`vitalID`,
			`optionName`,
			`updatedBy`,
			`updatedOn`,
			`createdBy`,
			`createdOn`
		FROM `content_vital_option`

		WHERE vitalOptionID = #{vitalOptionID}
	</select>

	<select id="getByParam" parameterType="map" resultType="contentVitalOption">
		SELECT
		`vitalOptionID`,
		`vitalID`,
		`optionName`,
		`updatedBy`,
		`updatedOn`,
		`createdBy`,
		`createdOn`
		FROM `content_vital_option`
		WHERE 1 = 1
		<if test="vitalOptionID != null">
			AND vitalOptionID = #{vitalOptionID}
		</if>
		<if test="vitalID != null">
			AND vitalID = #{vitalID}
		</if>
		<if test="term != null">
			AND LOWER(optionName) LIKE LOWER(CONCAT('%',#{term},'%')) LIMIT 20
		</if>
		<if test="offset != null and limit != null and sortColumn != null and sortOrder != null">
			ORDER BY ${sortColumn} ${sortOrder}
			LIMIT #{limit} OFFSET #{offset}
		</if>
	</select>

	<select id="getByVitalID" parameterType="map" resultType="contentVitalOption">
		SELECT
		`vitalOptionID`,
		`vitalID`,
		`optionName`,
		`updatedBy`,
		`updatedOn`,
		`createdBy`,
		`createdOn`
		FROM `content_vital_option`
		WHERE vitalID = #{vitalID}
	</select>

    <delete id="delete" parameterType="map">
		DELETE  FROM content_vital_option
		WHERE 1=1
		<if test="vitalOptionID != null">
			AND vitalOptionID = #{vitalOptionID}
		</if>
	</delete>


</mapper>