<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bottomUp.myBatis.persistence.PrescriptionInvMapper">

	<insert id="create" parameterType="prescriptionInv" useGeneratedKeys="true" keyProperty="presInvID" >

		INSERT INTO `prescription_inv`(
			`appointMentID`,
			`invID`,
			`note`,
			`checked`,
			`updatedBy`,
			`updatedOn`,
			`createdBy`,
			`createdOn`
		)
		VALUES(
			#{appointMentID},
			#{invID},
			#{note},
			#{checked},
			#{updatedBy},
			#{updatedOn},
			#{createdBy},
			#{createdOn}
		);


	</insert>
	
	<update id="update" parameterType="prescriptionInv">
		UPDATE `prescription_inv`
		SET
		`appointMentID` = #{appointMentID},
		`invID` = #{invID},
		`note` = #{note},
		`checked` =#{checked},
		`updatedBy` = #{doctorID},
		`updatedOn` = #{doctorID}
		WHERE presInvID = #{presInvID}
	</update>

	<select id="getByID" parameterType="long" resultType="prescriptionInv">
		SELECT
			`presInvID`,
			`appointMentID`,
			`invID`,
			`note`,
			`checked`,
			`updatedBy`,
			`updatedOn`,
			`createdBy`,
			`createdOn`
		FROM `prescription_inv`

		WHERE presInvID = #{presInvID}
	</select>

	<select id="getByParam" parameterType="map" resultType="prescriptionInv">
		SELECT
		`presInvID`,
		`appointMentID`,
		`invID`,
		`note`,
		`checked`,
		`updatedBy`,
		`updatedOn`,
		`createdBy`,
		`createdOn`
		FROM `prescription_inv`
		WHERE 1 = 1
		<if test="presInvID != null">
			AND presInvID = #{presInvID}
		</if>
		<if test="offset != null and limit != null and sortColumn != null and sortOrder != null">
			ORDER BY ${sortColumn} ${sortOrder}
			LIMIT #{limit} OFFSET #{offset}
		</if>
	</select>

    <delete id="delete" parameterType="map">
		DELETE  FROM prescription_inv
		WHERE 1=1
		<if test="prescription_inv != null">
			AND prescription_inv = #{prescription_inv}
		</if>
	</delete>


</mapper>