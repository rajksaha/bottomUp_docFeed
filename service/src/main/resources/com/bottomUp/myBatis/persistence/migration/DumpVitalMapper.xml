<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bottomUp.myBatis.persistence.migration.DumpAdviceMapper">

	<insert id="create" parameterType="dumpVital" useGeneratedKeys="true" keyProperty="vitalID" >

		INSERT INTO `dump_vital`(
			`vitalName`,
			`shortName`,
			`vitalUnit`


		)
		VALUES(
			#{vitalName},
			#{shortName},
			#{vitalUnit}

		);


	</insert>
	
	<update id="update" parameterType="dumpVital">
		UPDATE `dump_vital`
		SET
		`vitalName` = #{vitalName},
		`shortName` = #{shortName},
		`vitalUnit` = #{vitalUnit}

		WHERE vitalID = #{vitalID}
	</update>

	<select id="getByID" parameterType="int" resultType="dumpVital">
		SELECT
		    `vitalID`,
			`vitalName`,
			`shortName`,
			`vitalUnit`
			FROM `dump_vital`

		WHERE vitalID = #{vitalID}
	</select>

	<select id="getByName" parameterType="string" resultType="dumpVital">
		SELECT
		    `vitalID`,
			`vitalName`,
			`shortName`,
			`vitalUnit`
		FROM `dump_vital`
		WHERE advice = #{advice}
	</select>

	<select id="getByParam" parameterType="map" resultType="dumpVital">
		SELECT
		`vitalID`,
		`vitalName`,
		`shortName`,
		`vitalUnit`
		FROM `dump_vital`

		WHERE 1 = 1
		<if test="vitalID != null">
			AND vitalID = #{vitalID}
		</if>


	</select>

    <delete id="delete" parameterType="map">
		DELETE  FROM dump_vital
		WHERE 1=1
		<if test="vitalID != null">
			AND vitalID = #{vitalID}
		</if>
	</delete>


</mapper>